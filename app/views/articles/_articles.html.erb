<% @articles.each do |article| %>
    <h1> <%= link_to article.title, article %> </h1>
    <h2> by shri shri shri <%= link_to article.user.username, user_path(article.user)%></h2>
    <h5> <%= article.description %></h5>
    <h6> <%= article.author %></h6>
    <% if logged_in? and (article.user == current_user || current_user.admin?)%>
    <h6> <%= link_to "edit", edit_article_path(article) %> </h6>
    <h6> <%= link_to "DELETE", article , method: :delete, data: { confirm: 'Are you sure?' }%> </h6>
    <% end %>
    <hr>
<% end %>